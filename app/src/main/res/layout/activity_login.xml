<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText android:id="@+id/etUser"
        android:hint="Usuario" android:layout_width="match_parent" android:layout_height="wrap_content" />
    <EditText android:id="@+id/etPassword"
        android:hint="Contraseña" android:inputType="textPassword" android:layout_width="match_parent" android:layout_height="wrap_content" />

    <Button android:id="@+id/btnLogin"
        android:text="Iniciar sesión" android:layout_width="match_parent" android:layout_height="wrap_content" />

    <TextView android:id="@+id/tvRegister"
        android:text="¿No tienes cuenta? Regístrate" android:layout_width="wrap_content" android:layout_height="wrap_content" />
</LinearLayout>